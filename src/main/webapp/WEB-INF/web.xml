<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>dental-mechanic</display-name>

<!--  <listener>-->
<!--    <listener-class>edu.dental.web.servlets.ContextInitializer</listener-class>-->
<!--  </listener>-->

  <servlet>
    <servlet-name>Enter</servlet-name>
    <jsp-file>/enter.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>newProduct</servlet-name>
    <jsp-file>/newProduct.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>Prime</servlet-name>
    <servlet-class>edu.dental.web.servlets.basic.Prime</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ProductTypePage</servlet-name>
    <servlet-class>edu.dental.web.servlets.products.ProductMapTable</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>WorkTablePage</servlet-name>
    <servlet-class>edu.dental.web.servlets.works.WorkTablePage</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>SignUp</servlet-name>
    <jsp-file>/signUp.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>NewUserSaving</servlet-name>
    <servlet-class>edu.dental.web.servlets.basic.NewUserSaver</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DentalWorkSaver</servlet-name>
    <servlet-class>edu.dental.web.servlets.works.DentalWorkSaver</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ProductSaver</servlet-name>
    <servlet-class>edu.dental.web.servlets.products.ProductSaver</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>newRecord</servlet-name>
    <jsp-file>/newRecord.html</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>newRecord</servlet-name>
    <url-pattern>/new-work</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>newProduct</servlet-name>
    <url-pattern>/new-product</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ProductSaver</servlet-name>
    <url-pattern>/save-product</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Enter</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Prime</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ProductTypePage</servlet-name>
    <url-pattern>/product-map</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>WorkTablePage</servlet-name>
    <url-pattern>/work-list</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>NewUserSaving</servlet-name>
    <url-pattern>/new-user</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DentalWorkSaver</servlet-name>
    <url-pattern>/save-work</url-pattern>
  </servlet-mapping>

</web-app>
