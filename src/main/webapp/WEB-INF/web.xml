<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>dental-mechanic</display-name>

  <filter>
    <filter-name>mainFilter</filter-name>
    <filter-class>edu.dental.web.servlets.control.MainFilter</filter-class>
  </filter>

  <filter>
    <filter-name>enterFilter</filter-name>
    <filter-class>edu.dental.web.servlets.control.EnterFilter</filter-class>
  </filter>

  <listener>
    <listener-class>edu.dental.web.ContextInitializer</listener-class>
  </listener>

  <servlet>
    <servlet-name>signUp</servlet-name>
    <jsp-file>/jsp/signUp.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>logIn</servlet-name>
    <servlet-class>edu.dental.web.servlets.control.Authorization</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>edu.dental.web.servlets.control.Registration</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Main</servlet-name>
    <jsp-file>/jsp/main.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>workList</servlet-name>
    <jsp-file>/jsp/workList.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>workListHandle</servlet-name>
    <servlet-class>edu.dental.web.servlets.main.DentalWorkHandling</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>viewWork</servlet-name>
    <jsp-file>/jsp/viewDentalWork.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>workEdit</servlet-name>
    <servlet-class>edu.dental.web.servlets.main.DentalWorkEditing</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>deleteElement</servlet-name>
    <servlet-class>edu.dental.web.servlets.main.DeleteItem</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sorting</servlet-name>
    <servlet-class>edu.dental.web.servlets.main.WorkSorting</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>newWork</servlet-name>
    <jsp-file>/jsp/newWorkRecord.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>saveWork</servlet-name>
    <servlet-class>edu.dental.web.servlets.main.DentalWorkStoring</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>productMap</servlet-name>
    <jsp-file>/jsp/products/productMap.jsp</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>reportMenu</servlet-name>
    <jsp-file>/jsp/reporting/reportMenu.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>saveFile</servlet-name>
    <servlet-class>edu.dental.web.servlets.reporting.ReportFileSaving</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>workList</servlet-name>
    <url-pattern>/main/work-list</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>viewWork</servlet-name>
    <url-pattern>/main/view-work</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>newWork</servlet-name>
    <url-pattern>/main/new-work</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>productMap</servlet-name>
    <url-pattern>/main/product-map</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>reportMenu</servlet-name>
    <url-pattern>/main/reports</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/jsp/error.html</location>
  </error-page>
</web-app>
